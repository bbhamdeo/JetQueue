extends layout

block styles
 link(rel='stylesheet', href='/stylesheets/docs.css')

block scripts

block content
  div.wrapper
    div.heading
      a(href='/')
        h1.logo Lorem Wisdom
      h2.title API Documentation
    div.docs
      each doc in docs
        div.doc
          h3= doc.verb
            small doc.route
          p= doc.description
          p Example Response:
          code.language-javascript= doc.example_response.text
          p Optional Parameters
          ul.parameters
            each param in doc.optional_parameters
              li= param.name + ": " + param.desc





