$sky-blue = #237395
$white-smoke = #fefefe
$blue-shadow = 1px 1px #393988
$title-font = 'Clicker Script', cursive
$subtitle-font = 'Tangerine', cursive

body
  margin 0
  padding-bottom 55px

a {
  text-decoration: none;
}

div.landing
  margin 0
  text-align center
  font-family Helvetica, Arial, sans-serif

  .nav
    margin auto
    padding-top 150px
    background-color $sky-blue
    min-height 640px
    .logo
      font-family $title-font
      font-weight 400
      font-size 6em
      color $white-smoke
      text-shadow $blue-shadow


  .category
    font-family $subtitle-font
    font-size 44px

  .box
    min-height 320px
    margin auto
    margin-top 20px
    width 60%
    border 4px solid rgba(39,118, 151, 0.1)
    border-radius 4px

    p
      margin auto
      text-align center
      line-height 1.3em
      max-width: 400px


  .category
    font-weight 200

