.wrapper
  font-family Helvetica, Arial, sans-serif

.heading
  text-align center
  .logo
    margin-bottom 0
  .title
    margin-top 0
    font-family Helvetica, Arial, sans-serif
    color #fefefe
    font-weight 100

.doc
  padding 40px
  margin-left 20%
  margin-right 20%
  margin-bottom 50px
  background-color rgba(250, 250, 250, 0.8)
  border-radius 10px

  .response
    background-color: #f5f2f0
    margin auto
    padding 4px
    overflow-x scroll

  .verb
    font-family Courier New

  .desc, .response, .options, .example
    margin-left 20px

  .response
    font-size 0.7em
    box-shadow 0 1px 4px 1px #888
    border-radius 8px
    padding 20px
